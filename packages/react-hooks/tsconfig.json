{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "@solana/react-hooks",
	"extends": "../tsconfig/base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"lib": ["DOM", "ES2018", "ESNext.AsyncIterable"],
		"baseUrl": ".",
		"paths": {
			"@solana/client": ["../client/src/index.ts"],
			"@solana/client/*": ["../client/src/*"]
		}
	},
	"include": ["../build-scripts/build-time-constants.d.ts", "src"],
	"exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "test"]
}
